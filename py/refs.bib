@Article{Stegmann2020,
  author        = {Philipp Stegmann and Björn Sothmann and Jürgen König and Christian Flindt},
  journal       = {Physical Review Letters},
  title         = {Electron Waiting Times in a Strongly Interacting Quantum Dot: Interaction Effects and Higher-Order Tunneling Processes},
