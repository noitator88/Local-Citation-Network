@Article{Souto2015,
  author        = {R. Seoane Souto and R. Avriller and R. C. Monreal and A. Martin-Rodero and A. Levy Yeyati},
  journal       = {Physical Review B},
  title         = {Transient dynamics and waiting time distribution of molecular junctions in the polaronic regime},
  year          = {2015},
